<script>
	document.addEventListener("DOMContentLoaded", function () {
	    const loadMoreBtn = document.getElementById("loadMoreBtn");
	    const hiddenBlogs = document.querySelectorAll(".blog-item.d-none");
	    let currentIndex = 0;
	    const blogsPerClick = 2;
	
	    loadMoreBtn.addEventListener("click", function () {
	        let count = 0;
	        while (currentIndex < hiddenBlogs.length && count < blogsPerClick) {
	            hiddenBlogs[currentIndex].classList.remove("d-none");
	            hiddenBlogs[currentIndex].classList.add("fade-in");
	            currentIndex++;
	            count++;
	        }
	
	        if (currentIndex >= hiddenBlogs.length) {
	            loadMoreBtn.style.display = "none";
	        }
	    });
	});
</script>


